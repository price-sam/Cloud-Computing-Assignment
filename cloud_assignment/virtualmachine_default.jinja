resources:
-   name: {{ env["name"] }}
    type: compute.v1.instance
    properties:
        zone: {{ properties["zone"] }}
        type: zones/{{ properties["zone"] }}/machineTypes/n2d-standard-64
        disks:
        -   deviceName: boot
            type: PERSISTENT
            boot: true
            autoDelete: true
            initializeParams:
                sourceImage: https://www.googleapis.com/compute/v1/projects/ubuntu-os-cloud/global/images/ubuntu-minimal-1604-xenial-v20210330
            networkInterfaces:
            -   network: global/networks/network-main  